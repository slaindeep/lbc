{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@hostinger/static-build",
      "config": {
        "buildCommand": "npm install --legacy-peer-deps && react-scripts build",
        "outputDirectory": "build",
        "nodeVersion": "18.x"
      }
    }
  ],
  "routes": [
    {
      "handle": "filesystem"
    },
    {
      "src": "/.*",
      "dest": "/index.html"
    }
  ]
}